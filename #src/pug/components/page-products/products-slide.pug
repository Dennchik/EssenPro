section.products.page__new-products
	._title 
		._button-prev
			+iconfont('arow-left', '_icon')
		span Популярные товары
		._button-next
			+iconfont('arow-right', '_icon')
	._content._swiper
		._column
			.card(data-quantity)
				._body
					._header
						._label
							span хит
						._favourites
							+iconfont('heart', '_icon')
							+iconfont('heart-like', '_icon')
					._image 
						img(src="@@webRoot/img/main/products/product-1.png", alt="картинка")
					._info
						._title Макароные изделия ТМ”Щербинские” Вермишелька 450гр
						._content
							._price 46.00
								span р
							._text Щебекинские
					._buttons 
						._counter
							.counter-product
								.quantity.counter-product__quantity
									.quantity__button.quantity-remove
										+iconfont('minus', '_icon') 
									.quantity__input
										input.input(type="text", name="form[]", value="0", placeholder="<+>", autocomplete="off")
									.quantity__button.quantity-add
										+iconfont('plus', '_icon')
						._button 
							button(type="submit") 
								span В корзину
